#include <iostream>
#include<math.h>
using namespace std;
double a, a1, b, b1, x, x1, e; 
int k = 0, k1 = 0,z;

double f(double x1) {
	x1 = x1 * exp(x1)-1;
	return x1;
}

double j(double X) {
	X = 1 / exp(X);
	return X;
}

void main() {
	setlocale(LC_ALL, "rus");
	cout << "Введите a = ";
	cin >> a;
	a1 = a;
	cout << "Введите b = ";
	cin >> b;
	b1 = b;
	cout << "Введите e = ";
	cin >> e;
	x = (a + b) / 2;
	do
	{
		if (f(a) * f(x) < 0)
			b = x;
		else a = x;
		x = (a + b) / 2;
		k++;

	} while (abs(f(a) - f(b)) > e);	
	cout << "По методу дихотомии : \n";
	cout << "x=" << x << "\nинтераций : " << k << endl;
	a = a1;
	b = b1;
	x = (a + b) / 2;
	while (abs(x - x1) > e) {
		x1 = x;
		x = j(x);
		k1++;
	}
	cout << "\n" << "По методу  простых итераций : \n";
	cout << "x=" << x << "\nинтераций : " << k1 << endl;
	z = abs(k - k1);
	if (k > k1) 
		printf("\nМетод простых интераций оказался быстрее на %d интер.\n ", z);
	else printf("\nМетод дихотомии оказался быстрее на %d интер. \n", z);
}
